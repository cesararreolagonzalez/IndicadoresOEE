@model IndicadoresOEE.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<div class="titulo-seccion" style=" text-align: center; margin-top: 3rem; margin-bottom: 0rem;font-weight: 300; letter-spacing: .5px;">
    <h3 style=" color: rgb(63, 81, 181); ">
        @ViewBag.Title
    </h3>

    <h5 class="text-muted">Cree una cuenta nueva.</h5>
</div>


<div layout="column" layout-align="center" style="min-width: 30rem !important; margin-top:2rem;">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="md-form">
            @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control" })
            @Html.LabelFor(m => m.CorreoElectronico, new { })
            @Html.ValidationMessageFor(m => m.CorreoElectronico, "", new { @class = "text-danger" })
        </div>
        <div class="md-form">
            @Html.PasswordFor(m => m.Contraseña, new { @class = "form-control" })
            @Html.LabelFor(m => m.Contraseña, new { })
            @Html.ValidationMessageFor(m => m.Contraseña, "", new { @class = "text-danger" })
        </div>
        <div class="md-form">
            @Html.PasswordFor(m => m.ConfirmarContraseña, new { @class = "form-control" })
            @Html.LabelFor(m => m.ConfirmarContraseña, new { })
            @Html.ValidationMessageFor(m => m.ConfirmarContraseña, "", new { @class = "text-danger" })
        </div>
        <div class="md-form">
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            @Html.LabelFor(m => m.Nombre, new { })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Registrar</button>
    }
</div>


