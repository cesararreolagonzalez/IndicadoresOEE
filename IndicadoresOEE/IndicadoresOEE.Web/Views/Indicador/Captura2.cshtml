
@{
    ViewBag.Title = "Captura de indicadores";
}

<style>
    .hint {
        /* Position the hint */
        position: absolute;
        left: 2px;
        right: auto;
        bottom: 7px;
        /* Copy styles from ng-messages */
        font-size: 12px;
        line-height: 14px;
        transition: all 0.3s cubic-bezier(0.55, 0, 0.55, 0.2);
        /* Set our own color */
        color: grey;
    }

    body[dir=rtl] .hint {
        right: 2px;
        left: auto;
    }

    .md-title {
        font-size: 16px;
        font-weight: 500;
        letter-spacing: 0.005em;
    }

    .md-datepicker-input {
        min-width: 145px !important;
    }

</style>


<div ng-controller="CapturaIndicadorController" ng-cloak>
    <label class="c01971 c01973 c01969">Tecnologías de la Información / Sistemas</label>
    <div class="step-marker step-marker--centered-pulled background-color--primary">1</div>
    <div class="step-marker step-marker--centered-pulled background-color--primary">12</div>
    <div class="step-marker step-marker--centered-pulled background-color--primary">120</div>
    <div class="step-marker step-marker--centered-pulled background-color--primary">{{1200 | number}}</div>
    <div class="step-marker step-marker--centered-pulled background-color--primary">{{12000 | number}}</div>
    <h2 style="text-align: center; padding: 2rem !important;">Captura de indicadores</h2>
    <md-card md-theme="default" ng-cloak style="min-width: 60rem !important; max-width: 60rem !important;">
        <md-card-title>
            <md-card-title-text>
                <span class="md-title text-muted" style="padding-left: 2rem;">Datos generales</span>
                <span class="md-subhead"></span>
            </md-card-title-text>
        </md-card-title>

        <md-card-content style="padding-left: 3rem !important; padding-right: 3rem !important; margin-top: 1rem; padding-bottom: 3rem !important;">
            <div layout="column" layout-gt-xs="row">
                <div flex flex-gt-xs="50" style="padding-right: 2rem !important;">
                    <div layout="column" layout-gt-xs="row" flex-gt-sm flex-gt-xs>
                        <md-input-container class="md-block" flex-gt-sm>
                            <label>Centro</label>
                            <md-select id="centroSeleccionable"
                                       name="centroSeleccionable"
                                       md-on-open="ObtenerCentros()"
                                       md-on-close="ResetearTerminoBusqueda()"
                                       ng-model="DatosGenerales.IndiceCentro"
                                       md-container-class="selectdemoSelectHeader"
                                       required
                                       md-no-asterisk
                                       ng-cloak>
                                <md-select-header class="demo-select-header">
                                    <input ng-model="TerminoBusqueda"
                                           type="search"
                                           placeholder="Busca un centro"
                                           class="demo-header-searchbox md-text">
                                </md-select-header>
                                <md-optgroup label="Centros disponibles">
                                    <md-option ng-repeat="Centro in ListaCentros | filter:TerminoBusqueda" ng-value="Centro.Indice">
                                        {{ Centro.Nombre }}
                                    </md-option>
                                </md-optgroup>
                            </md-select>
                        </md-input-container>
                    </div>
                    <div layout="column" layout-gt-xs="row" flex-gt-sm flex-gt-xs>
                        <md-input-container class="md-block" flex-gt-sm>
                            <label>Departamento</label>
                            <md-select id="departamentoSeleccionable"
                                       name="departamentoSeleccionable"
                                       ng-disabled="DatosGenerales.IndiceCentro === null"
                                       md-on-open="ObtenerDepartamentos()"
                                       md-on-close="ResetearTerminoBusqueda()"
                                       ng-model="DatosGenerales.IndiceDepartamento"
                                       md-container-class="selectdemoSelectHeader"
                                       required
                                       md-no-asterisk
                                       ng-cloak>
                                <md-select-header class="demo-select-header">
                                    <input ng-model="TerminoBusqueda"
                                           type="search"
                                           placeholder="Busca un departamento"
                                           class="demo-header-searchbox md-text">
                                </md-select-header>
                                <md-optgroup label="Centros disponibles">
                                    <md-option ng-repeat="Departamento in ListaDepartamentos | filter:TerminoBusqueda" ng-value="Departamento.Indice">
                                        {{ Departamento.Nombre }}
                                    </md-option>
                                </md-optgroup>
                            </md-select>
                        </md-input-container>
                    </div>
                    <div layout="column" layout-gt-xs="row" flex-gt-sm flex-gt-xs>
                        <md-input-container class="md-block" flex-gt-sm>
                            <label>Línea</label>
                            <md-select id="lineaSeleccionable"
                                       name="lineaSeleccionable"
                                       ng-disabled="DatosGenerales.IndiceDepartamento === null"
                                       md-on-open="ObtenerLineas()"
                                       md-on-close="ResetearTerminoBusqueda()"
                                       ng-model="DatosGenerales.IndiceLinea"
                                       md-container-class="selectdemoSelectHeader"
                                       required
                                       md-no-asterisk
                                       ng-cloak>
                                <md-select-header class="demo-select-header">
                                    <input ng-model="TerminoBusqueda"
                                           type="search"
                                           placeholder="Busca una línea"
                                           class="demo-header-searchbox md-text">
                                </md-select-header>
                                <md-optgroup label="Lineas disponibles">
                                    <md-option ng-repeat="Linea in ListaLineas | filter:TerminoBusqueda" ng-value="Linea.Indice">
                                        {{ Linea.Nombre }}
                                    </md-option>
                                </md-optgroup>
                            </md-select>
                        </md-input-container>
                    </div>
                    <div layout="column" layout-gt-xs="row" flex-gt-sm flex-gt-xs>
                        <md-input-container class="md-block" flex-gt-sm>
                            <label>Proceso</label>
                            <md-select id="procesoSeleccionable"
                                       name="procesoSeleccionable"
                                       ng-disabled="DatosGenerales.IndiceLinea === null"
                                       md-on-open="ObtenerProcesos()"
                                       md-on-close="ResetearTerminoBusqueda()"
                                       ng-model="DatosGenerales.IndiceProceso"
                                       md-container-class="selectdemoSelectHeader"
                                       required
                                       md-no-asterisk
                                       ng-cloak>
                                <md-select-header class="demo-select-header">
                                    <input ng-model="TerminoBusqueda"
                                           type="search"
                                           placeholder="Busca un proceso"
                                           class="demo-header-searchbox md-text">
                                </md-select-header>
                                <md-optgroup label="Lineas disponibles">
                                    <md-option ng-repeat="Proceso in ListaProcesos | filter:TerminoBusqueda" ng-value="Proceso.Indice">
                                        {{ Proceso.Nombre }}
                                    </md-option>
                                </md-optgroup>
                            </md-select>
                        </md-input-container>
                    </div>
                </div>
                <div flex flex-gt-xs="50" style="padding-left: 2rem !important;">
                    <div layout="column" layout-gt-xs="row" flex-gt-sm flex-gt-xs>
                        <div layout="row" flex-gt-sm>
                            <md-input-container class="md-block" flex="70" style="height: 34px !important;">
                                <label>Orden</label>
                                <input ng-model="DatosGenerales.Orden" solo-digitos valor-valido-mayor-cero required md-no-asterisk>
                            </md-input-container>
                            <div flex="30" layout="column" layout-align="center center">
                                <md-button id="btnValidar" ng-click="ValidarOrden($event)">
                                    <md-icon md-svg-src="~/Content/Icons/search.svg"
                                             aria-label="Insert Drive Icon">
                                    </md-icon>
                                    VALIDAR
                                </md-button>
                            </div>
                        </div>
                    </div>
                    <div layout="column" layout-gt-xs="row" flex-gt-sm flex-gt-xs>
                        <md-input-container class="md-block" flex-gt-sm style="height: 34px!important;">
                            <label>Lote</label>
                            <input ng-model="DatosGenerales.Lote" required md-no-asterisk readonly>
                        </md-input-container>
                    </div>
                    <div layout="column" layout-gt-xs="row" flex-gt-sm flex-gt-xs>
                        <md-input-container class="md-block" flex-gt-sm style="height: 34px !important;">
                            <label>Material</label>
                            <input ng-model="DatosGenerales.Material" required md-no-asterisk readonly>
                        </md-input-container>
                    </div>
                    <div layout="column" layout-gt-xs="row" flex-gt-sm flex-gt-xs>
                        <md-input-container class="md-block" flex-gt-sm style="height: 34px !important;">
                            <label>Descripción</label>
                            <input ng-model="DatosGenerales.Descripcion" required md-no-asterisk readonly>
                        </md-input-container>
                    </div>
                    <div layout="column" layout-gt-xs="row" flex-gt-sm flex-gt-xs>
                        <md-input-container class="md-block" flex-gt-sm style="height: 34px !important;">
                            <label>Velocidad</label>
                            <input ng-model="DatosGenerales.Velocidad" solo-digitos formato-numerico required md-no-asterisk readonly>
                        </md-input-container>
                    </div>
                </div>
            </div>
        </md-card-content>
    </md-card>


    <md-card md-theme="default" ng-cloak style="min-width: 60rem !important; max-width: 60rem !important; margin-top: 1rem !important; padding-bottom: 3rem !important;">
        <md-card-title>
            <md-card-title-text>
                <span class="md-title text-muted" style="padding-left: 2rem;">Datos del indicador</span>
                <span class="md-subhead"></span>
            </md-card-title-text>
        </md-card-title>

        <md-card-content style="padding-left: 3rem !important; padding-right: 3rem !important; margin-top: 1rem;">
            <div layout="column" layout-gt-xs="row">

                <div flex flex-gt-xs="55" style="padding-right: 2rem !important;">
                    <form name="datosIndicadorForm">

                        <div layout="column" layout-gt-xs="row" flex-gt-sm>
                            <md-input-container class="md-block md-subhead md-input-has-value" flex-gt-sm>
                                <label>Turno</label>
                                <md-radio-group ng-model="DatosIndicador.Turno" layout="row">
                                    <md-radio-button class="md-primary" ng-repeat="turno in Turnos" ng-value="turno" aria-label="{{ turno }}" flex>{{ turno }}</md-radio-button>
                                </md-radio-group>
                            </md-input-container>
                        </div>
                        <div layout="column" layout-gt-xs="row" flex-gt-sm style="margin-top: 1rem !important;">
                            <div layout-gt-sm="row" flex-gt-sm>
                                <div layout-gt-sm="column" flex-gt-sm>
                                    <md-input-container class="md-block" ng-disabled="DatosGenerales.IndiceIndicador === null">
                                        <label>Ciclo</label>
                                        <input name="ciclo" ng-model="DatosIndicador.Ciclo" solo-digitos formato-numerico limite-cantidad="60" valor-valido-mayor-cero required md-no-asterisk>
                                        <div ng-messages="datosIndicadorForm.ciclo.$error" md-auto-hide="true">
                                            <div ng-message="required" ng-if="datosIndicadorForm.ciclo.$dirty">
                                                El ciclo debe tener un valor
                                            </div>
                                            <div ng-message="valorValidoMayorCero">
                                                El ciclo debe ser mayor a 0
                                            </div>
                                            <div ng-message="limiteCantidad">
                                                El ciclo debe ser menor a 60
                                            </div>
                                        </div>
                                    </md-input-container>
                                </div>
                                <div flex="5" hide-xs hide-sm>
                                    <!-- Spacer //-->
                                </div>

                                <div layout-gt-sm="column" flex-gt-sm>
                                    <md-input-container class="md-block" ng-disabled="DatosGenerales.IndiceIndicador === null">
                                        <label>Piezas</label>
                                        <input name="piezas" ng-model="DatosIndicador.Piezas" solo-digitos formato-numerico valor-valido-mayor-cero>
                                        <div ng-messages="datosIndicadorForm.piezas.$error" md-auto-hide="true">
                                            <div ng-message="required" ng-if="datosIndicadorForm.piezas.$dirty">
                                                Las piezas deben tener un valor
                                            </div>
                                            <div ng-message="valorValidoMayorCero">
                                                Las piezas deben ser mayor a 0
                                            </div>
                                        </div>
                                    </md-input-container>
                                </div>

                            </div>
                        </div>
                        <div layout="column" layout-gt-xs="row" flex-gt-sm flex-gt-xs>

                            <div layout-gt-sm="row" flex-gt-sm style="margin-top: 0 !important;">

                                <div layout-gt-sm="column" flex-gt-sm="45">
                                    <md-datepicker class=""
                                                   ng-model="DatosIndicador.Fecha"
                                                   md-max-date="Util.FechaLimite"
                                                   ng-disabled="DatosGenerales.IndiceIndicador === null"
                                                   md-placeholder="Fecha">
                                    </md-datepicker>
                                </div>
                                <div layout-gt-sm="column" flex-gt-sm="55">
                                    <div layout-gt-sm="row">
                                        <md-icon title="Hora" md-svg-src="../Content/Icons/time.svg" aria-label="Hora" style="margin-left: 2.5rem !important; margin-right: 1.99rem !important;margin-top: 0.4rem !important;padding: 0 !important;"></md-icon>
                                        <div style="margin-top: -1rem !important;">
                                            <md-input-container class="">
                                                <md-select ng-model="DatosIndicador.Hora"
                                                           aria-label="hora"
                                                           ng-disabled="DatosGenerales.IndiceIndicador === null">
                                                    <md-optgroup label="hora">
                                                        <md-option ng-repeat="hora in [].constructor(24) track by $index"
                                                                   ng-value="$index"
                                                                   ng-disabled="ValidarHora($index)">
                                                            {{ $index < 10 ? '0' + $index : $index }}
                                                        </md-option>
                                                    </md-optgroup>
                                                </md-select>
                                            </md-input-container>
                                            <md-input-container class="">
                                                <md-select ng-model="DatosIndicador.Minuto"
                                                           aria-label="minutos"
                                                           ng-disabled="DatosIndicador.Hora === null">
                                                    <md-optgroup label="minuto">
                                                        <md-option ng-repeat="minuto in [].constructor(60) track by $index"
                                                                   ng-value="$index"
                                                                   nng-disabled="ValidarMinuto($index)">
                                                            {{ $index < 10 ? '0' + $index : $index }}
                                                        </md-option>
                                                    </md-optgroup>
                                                </md-select>
                                            </md-input-container>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div flex flex-gt-xs="45" style="padding-left: 2rem !important;">
                    <div layout-gt-sm="row" layout-align="center center" flex-gt-sm>
                        <blockquote class="blockquote bq-primary" ng-class="{'bq-warning': Util.CalculoHoras < 1 && Util.CalculoHorasParo > 0, 'bq-success': Util.CalculoHoras >= 0 && Util.CalculoHoras <= 1.1  && Util.CalculoHorasParo <= 0, 'bq-danger': Util.CalculoHoras > 1.1}" ng-hide="Util.CalculoHoras === null">
                            <p class="bq-title" ng-bind="Util.MensajeCalculoHoras">
                            </p>
                            <p ng-bind-html="Util.MensajeCalculoHorasParo" ng-class="{'mdb-text-warning': Util.CalculoHoras < 1 && Util.CalculoHorasParo > 0, 'mdb-text-success': Util.CalculoHoras >= 0 && Util.CalculoHoras <= 1.1 && Util.CalculoHorasParo <= 0, 'mdb-text-danger': Util.CalculoHoras > 1.1}">
                            </p>
                        </blockquote>
                    </div>
                </div>
            </div>
        </md-card-content>
    </md-card>

    <md-card md-theme="default" ng-cloak style="min-width: 60rem !important; max-width: 60rem !important;">
        <md-card-title>
            <md-card-title-text>
                <span class="md-title text-muted" style="padding-left: 2rem;">Rechazos</span>
                <span class="md-subhead"></span>
            </md-card-title-text>
        </md-card-title>
        <md-card-content style="padding-left: 3rem;">
            <div layout="row" ng-show="DatosIndicador.Piezas > 0" flex>
                <div layout="row" flex>
                    <span>Piezas totales <span class="step-marker step-marker--centered-pulled background-color--primary">{{ DatosIndicador.Piezas | number }} </span></span>
                </div>
                <div layout="row" flex>
                    <span>Piezas aceptadas <span class="step-marker step-marker--centered-pulled background-color--primary"> {{ (DatosIndicador.Piezas - Util.SumaPiezasRechazadas) < 0 ? 0 : DatosIndicador.Piezas - Util.SumaPiezasRechazadas | number }} </span></span>
                </div>
                <div layout="row" flex>
                    <span>Piezas rechazadas <span class="step-marker step-marker--centered-pulled background-color--primary"> {{ Util.SumaPiezasRechazadas | number }} </span></span>
                </div>
            </div>
            <md-content class="" layout="column" style="margin-top: 1rem;">
                <md-chips ng-model="ListaRechazosElegidos"
                          class="custom-chips"
                          readonly="true"
                          md-removable="true"
                          md-transform-chip="TransformarChipRechazo($chip)">
                    <md-chip-template>
                        <span>
                            <strong>{{$chip.Nombre | uppercase }}</strong>
                            <em>({{ $chip.Cantidad }})</em>
                        </span>
                    </md-chip-template>
                    <button md-chip-remove
                            class="vegetablechip md-primary"
                            ng-click="QuitarRechazo($chip)">
                        <md-icon md-svg-icon="md-close"></md-icon>
                    </button>
                </md-chips>
            </md-content>
            <span ng-show="ListaRechazosElegidos.length > 0" style="margin-left: 0rem; margin-top: 2rem;" ng-cloak>
                {{ ListaRechazosElegidos.length }} {{ ListaRechazosElegidos.length === 1 ? 'rechazo seleccionado' : 'rechazos seleccionados' }}
            </span>
            <span ng-show="ListaRechazosElegidos.length === 0" style="padding-bottom: 2rem;">No has seleccionado rechazos aún</span>
        </md-card-content>
        <md-card-actions>
            <div layout="column" layout-gt-xs="row" layout-align="start center">
                <div flex flex-gt-xs="50" layout-align="start center">
                    <strong style="padding-left: 2.5rem;" ng-class="{'mdb-text-danger': DatosIndicador.Piezas < Util.SumaPiezasRechazadas }" ng-show="DatosIndicador.Piezas < Util.SumaPiezasRechazadas"><md-icon class="text-danger" md-svg-src="../../Content/Icons/report_problem.svg"></md-icon>&nbsp;&nbsp;&nbsp;El límite de piezas rechazadas es de {{ DatosIndicador.Piezas | number }} </strong>
                </div>
                <div flex flex-gt-xs="50" layout-gt-xs="row" layout-align="end center">
                    <md-button layout-align="end center" id="btnAddRechazo" md-no-ink class="md-primary" ng-click="agregarRechazo($event)"
                               ng-show="DatosGenerales.IndiceProceso !== null && DatosIndicador.Piezas >= Util.SumaPiezasRechazadas && DatosIndicador.Piezas > 0">
                        <md-icon md-svg-icon="md-add"></md-icon>
                        AGREGAR
                    </md-button>
                </div>
            </div>
        </md-card-actions>
    </md-card>

    <md-card md-theme="default" ng-cloak style="min-width: 60rem !important; max-width: 60rem !important;">
        <md-card-title>
            <md-card-title-text>
                <span class="md-title text-muted" style="padding-left: 2rem;">Paros</span>
                <span class="md-subhead"></span>
            </md-card-title-text>
        </md-card-title>
        <md-card-content style="padding-left: 3rem;">
            <div layout="row" flex ng-show="Util.EstadoHorasParo">
                <div layout="row" flex>
                    <span>Minutos de paro disponibles <span class="step-marker step-marker--centered-pulled background-color--primary">{{ Util.CalculoHorasParo | number }} </span></span>
                </div>
                <div layout="row" flex>
                    <span ng-class="{'mdb-text-danger': Util.CalculoHorasParo < Util.SumaParos }">Minutos de paro asignados <span class="step-marker step-marker--centered-pulled background-color--primary">{{ Util.SumaParos | number }} </span></span>
                </div>
                <div layout="row" flex>
                    <span>Sin causa asignada  <span class="step-marker step-marker--centered-pulled background-color--primary">{{ Util.ParoSinCausaAsignada | number }}</span></span>
                </div>
            </div>
            <md-content class="" layout="column" style="margin-top: 1rem;">
                <md-chips ng-model="ListaParosElegidos"
                          class="custom-chips"
                          readonly="true"
                          md-removable="true"
                          md-transform-chip="TransformarChipParo($chip)">
                    <md-chip-template>
                        <span>
                            <strong>{{$chip.Nombre | uppercase }}</strong>
                            <em>({{ $chip.Cantidad }})</em>
                            <span ng-if="$chip.Folio">[Folio: {{ $chip.Folio }}]</span>
                        </span>
                    </md-chip-template>
                    <button md-chip-remove
                            class="vegetablechip md-primary"
                            ng-click="QuitarParo($chip)">
                        <md-icon md-svg-icon="md-close"></md-icon>
                    </button>
                </md-chips>
            </md-content>
            <span ng-show="ListaParosElegidos.length > 0" style="margin-left: 0rem; margin-top: 2rem;" ng-cloak>
                {{ ListaParosElegidos.length }} {{ ListaParosElegidos.length === 1 ? 'paro seleccionado' : 'paros seleccionados' }}
            </span>
            <span ng-show="ListaParosElegidos.length === 0" style="padding-bottom: 2rem;">No has seleccionado paros aún</span>
        </md-card-content>
        <md-card-actions>
            <div layout="column" layout-gt-xs="row" layout-align="start center">
                <div flex flex-gt-xs="50" layout-align="start center">
                    <strong style="padding-left: 2.5rem;" ng-class="{'mdb-text-danger': Util.CalculoHorasParo < Util.SumaParos }" ng-show="Util.CalculoHorasParo < Util.SumaParos"><md-icon class="text-danger" md-svg-src="../../Content/Icons/report_problem.svg"></md-icon>&nbsp;&nbsp;&nbsp;El límite de paros es de {{ Util.CalculoHorasParo }} </strong>
                </div>
                <div flex flex-gt-xs="50" layout-gt-xs="row" layout-align="end center">
                    <md-button id="btnAddParo" md-no-ink class="md-primary" ng-click="agregarParo($event)" ng-show="DatosGenerales.IndiceProceso !== null && (Util.CalculoHorasParo >= Util.SumaParos) && Util.EstadoHorasParo">
                        <md-icon md-svg-icon="md-add"></md-icon>
                        AGREGAR
                    </md-button>
                </div>
            </div>
        </md-card-actions>
    </md-card>
</div>




